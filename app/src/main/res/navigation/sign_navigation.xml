<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sign_navigation"
    app:startDestination="@id/signinFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.naruto.narutoquiz.ui.userLogIn.login.SignUpFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_signup" >
        <action
            android:id="@+id/action_loginFragment_to_signinFragment"
            app:destination="@id/signinFragment" />
        <action
            android:id="@+id/action_loginFragment_to_recoveryFragment"
            app:destination="@id/recoveryFragment" />
    </fragment>
    <fragment
        android:id="@+id/signinFragment"
        android:name="com.naruto.narutoquiz.ui.userLogIn.signin.SigninFragment"
        android:label="fragment_signin"
        tools:layout="@layout/fragment_signin" >
        <action
            android:id="@+id/action_signinFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_signinFragment_to_recoveryFragment"
            app:destination="@id/recoveryFragment" />
    </fragment>
    <fragment
        android:id="@+id/recoveryFragment"
        android:name="com.naruto.narutoquiz.ui.userLogIn.recovery.RecoveryFragment"
        android:label="RecoveryFragment" >
        <action
            android:id="@+id/action_recoveryFragment_to_signinFragment"
            app:destination="@id/signinFragment" />
    </fragment>
</navigation>